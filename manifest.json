{
   "name": "grokLingua Extension",
   "version": "1.0",
   "description": "Build an Extension for grokLingua!",
   "permissions": ["activeTab", "cookies", "*://www.groklingua.com/*"],
   "browser_action": {
      "default_popup": "popup.html"
    },
   "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Alt+G"
        },
        "description": "searches for selected word on page"
      }
    },
   "manifest_version": 2
 }
