{
  "name": "grokLingua Extension",
  "version": "0.0.1",
  "description": "Build an Extension for grokLingua!",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "favicon.png",
    "128": "favicon-128x128.png"
  },
  "permissions": ["activeTab", "cookies", "*://www.groklingua.com/*"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "favicon-32x32.png",
      "48": "favicon.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+G"
      },
      "description": "Searches grokLingua for the selected word on a page"
    }
  },

  "manifest_version": 2
}
